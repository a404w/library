schema {
  query: Query
  mutation: Mutation
}

type Query {
  # ğŸ“š BÃ¼cher
  books: [Book!]!
  bookById(id: ID!): Book
  booksByGenre(id: ID!): [Book!]!
  booksByAuthor(id: ID!): [Book!]!

  # ğŸ‘¥ Nutzer
  users: [User!]!
  userById(id: ID!): User
  userByName(name: String!): User

  # ğŸ“… Ausleihen (Loans)
  loans: [Loan!]!
  loanById(id: ID!): Loan
  loansByUser(userId: ID!): [Loan!]!

  # âœï¸ Autoren
  authors: [Author!]!
  authorById(id: ID!): Author
  authorsByName(name: String!): [Author!]!

  # ğŸ“– Genres
  genres: [Genre!]!
  genreById(id: ID!): Genre
  genresByName(name: String!): [Genre!]!
}

type Mutation {
  # ğŸ“š BÃ¼cher
  addBook(book: BookInput!): Book
  updateBook(book: BookInput!): Boolean
  deleteBook(id: ID!): Boolean

  # ğŸ“… Loans
  addLoan(book: BookInput!, user: UserInput!): Loan
  deleteLoan(id: ID!): Boolean
  updateLoan(loan: LoanInput!): Boolean

  # ğŸ“… Reservation
  addReservation(book: BookInput!, user: UserInput!): Reservation
  deleteReservation(id: ID!): Boolean
  updateReservation(reservation: ReservationInput!): Boolean

  # ğŸ‘¥ Nutzer
  addUser(name: String!, email: String!): User
  updateUser(user: UserInput!): Boolean
  deleteUser(id: ID!): Boolean

  # âœï¸ Autoren
  addAuthor(name: String!): Author
  updateAuthor(author: AuthorInput!): Boolean
  deleteAuthor(id: ID!): Boolean

  # ğŸ“– Genres
  addGenre(genrename: String!, beschreibung: String!): Genre
  updateGenre(genre: GenreInput!): Boolean
  deleteGenre(id: ID!): Boolean
}

# ğŸ“š Book-Modell
type Book {
  id: ID!
  title: String!
  isbn: String!
  genre: Genre!
  authors: [Author!]!
  isAvailable: Boolean!
}

# ğŸ‘¥ User-Modell
type User {
  id: ID!
  name: String!
  email: String!
  borrowedBooks: [Book!]!
}

# ğŸ“… Loan-Modell
type Loan {
  id: ID!
  book: Book!
  user: User!
  from: String!
  to: String!
}

# ğŸ“… Reservation-Modell
type Reservation {
  id: ID!
  user: User!
  book: Book!
  reservationDate: String!
}

# âœï¸ Author-Modell
type Author {
  id: ID!
  name: String!
  books: [Book!]!
}

# ğŸ“– Genre-Modell
type Genre {
  id: ID!
  genrename: String!
  beschreibung: String!
  books: [Book!]!
}

# ğŸ”„ Input-Typen fÃ¼r Mutations
input BookInput {
  id: ID
  title: String!
  isbn: String!
  genre: String!
  authors: [String!]!
  isAvailable: Boolean!
}

input UserInput {
  id: ID
  name: String!
  email: String!
}

input LoanInput {
  id: ID
  book: BookInput!
  user: UserInput!
  from: String!
  to: String!
}

input ReservationInput {
  id: ID
  user: UserInput!
  book: BookInput!
  reservationDate: String!
}

input AuthorInput {
  id: ID
  name: String!
}

input GenreInput {
  id: ID
  genrename: String!
  beschreibung: String!
}
